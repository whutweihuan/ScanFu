<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/eee"
    tools:context="scanfu.com.frend.FrendInformationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <include layout="@layout/title_bar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_head"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/tou_default" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/_999999"
                    />

                <ListView
                    android:id="@+id/lv_1"
                    android:layout_width="match_parent"
                    android:layout_height="135dp" />

                <ListView
                    android:id="@+id/lv_2"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="150dp" />

                <Button
                    android:id="@+id/btn_send_fu_ka"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="送福卡"
                    android:background="@drawable/btn_register_style"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginTop="30dp"
                    />
                <Button
                    android:id="@+id/btn_add_frend"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="添加好友"
                    android:background="@drawable/btn_register_style"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginTop="30dp"
                    android:visibility="gone"
                    />
                <Button
                    android:id="@+id/btn_delete_frend"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="删除好友"
                    android:background="@drawable/btn_red_style"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginTop="30dp"
                    />


            </LinearLayout>

        </ScrollView>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_big_head"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ee333333"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/iv_big_head"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_centerInParent="true"
            android:duplicateParentState="true"
            android:background="@drawable/tou_default"
            />


    </RelativeLayout>


</RelativeLayout>
