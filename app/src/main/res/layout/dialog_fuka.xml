<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"

    >
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="恭喜您获得一张福卡"
        android:textColor="@color/black"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/tv_fuka_name"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:background="@drawable/fu_ka_zi_bg"
        android:text="尊师卡"
        android:textColor="@color/fu_zi_you"
        android:gravity="center"
        android:textSize="36sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/a0a0a0"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <View
            android:id="@+id/v_line"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="@color/a0a0a0"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/tv_repeat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/v_line"
            android:text="再来一次"
            android:textColor="@drawable/text_style_hongbao"
            android:textSize="16sp"
            android:gravity="center"

            />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/v_line"
            android:gravity="center"
            android:text="以后再说"
            android:textColor="@drawable/text_style_hongbao"
            android:textSize="16sp" />


    </RelativeLayout>


</LinearLayout>
