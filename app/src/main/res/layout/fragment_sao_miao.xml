<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/eee"
    tools:context="scanfu.com.UI.SaoMiaoFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:background="@color/white"
        android:textColor="@color/black"
        android:text="扫描"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >
        <TextView
            android:id="@+id/tv_saozi"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:textSize="33sp"
            android:text="扫字"
            android:gravity="center"
            android:textColor="@drawable/text_style_hongbao"
            android:background="@drawable/saozi_bg"
            />
        <TextView
            android:id="@+id/tv_saoma"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="扫码"
            android:gravity="center"
            android:textColor="@drawable/text_style_hongbao"
            android:background="@drawable/saoma_bg"
            android:layout_marginTop="50dp"
            android:textSize="33sp"
            />

    </LinearLayout>




</RelativeLayout>
